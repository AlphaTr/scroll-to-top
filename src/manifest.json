{
    "name": "Scroll To Top",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Scroll to Top",
    "background": {
        "page": "main.html",
        "script": [
            "main.js"
        ]
    },
    "content_scripts": [{
            "matches": ["*://*/*"],
            "css": ["page/page.css"],
            "js": ["lib/jquery-2.0.0.min.js", "page/page.js"],
            "all_frames": true
        }
    ],
    "permissions": [
        "tabs",
        "storage",
        "*://*/*"
    ],
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-16@2.png",
        "48": "icons/icon-48.png",
        "96": "icons/icon-48@2.png",
        "128": "icons/icon-128.png",
        "256": "icons/icon-128@2.png"
    },
    "options_page": "options/index.html"
}
